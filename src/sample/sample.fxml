<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.CheckBox?>

<HBox fx:controller="sample.Controller" xmlns:fx="http://javafx.com/fxml" alignment="center">

    <VBox>
    <ListView fx:id="employeeListView"/>
        <Button text = "Delete Selected" fx:id="removeButton"/>
    </VBox>

    <VBox>
        <HBox>
            <Label text="First Name" prefWidth="100"/>
            <TextField prefWidth="150" fx:id="firstNameTextField"/>
        </HBox>
        <HBox>
            <Label text="Last Name" prefWidth="100" />
            <TextField prefWidth="150" fx:id="lastNameTextField"/>
        </HBox>
        <HBox>
            <Label text="Is Active" prefWidth="100" />
            <CheckBox fx:id="isActiveCheckBox"/>
        </HBox>
        <HBox>
            <Button text = "Clear" prefWidth="100" fx:id="clearButton"/>
            <Button text = "Add New" prefWidth="100" fx:id="addButton"/>
        </HBox>
    </VBox>

</HBox>